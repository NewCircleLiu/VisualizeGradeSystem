@{
    ViewBag.Title = "教师端首页";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Partial("HomePartialView_2")

<link href="~/Resources/css/index.css" rel="stylesheet" />
<link href="~/Resources/css/main.css" rel="stylesheet" type="text/css">
<link href="~/Resources/css/themify-icons.css" rel="stylesheet" />

<div class="container">
    <div class="fh5co-spacer fh5co-spacer-md"></div>
    <div class="row" id="fh5co-features">

        <!--成绩曲线-->
        <div class="col-md-6 col-sm-4 text-center fh5co-feature feature-box">
            <figure class="effect-sadie">
                <div class="fh5co-feature-icon">
                    <a href="~/Teacher/GradeSchollChartPage/"><i class="ti-bar-chart-alt"></i></a>
                </div>
                <h3 class="heading tm-figure-title">任教成绩曲线</h3>
                <p style="color: #8b969c; padding-top: 20px">点击这里可以查看你所任教班级的成绩曲线</p>
            </figure>
        </div>
        <!--上传成绩-->
        <div class="col-md-6 col-sm-4 text-center fh5co-feature feature-box">
            <figure class="effect-sadie">
                <div class="fh5co-feature-icon">
                    <a href="@Url.Content("~/Teacher/CompareTwoStudents/")"><i class="ti-upload"></i></a>
                </div>
                <h3 class="heading">成绩对比</h3>
                <p style="color: #8b969c; padding-top: 20px">点击这里可以对比两位同学的成绩</p>
            </figure>
        </div>
        <!--知识点-->
        <div class="col-md-6 col-sm-4 text-center fh5co-feature feature-box">
            <figure class="effect-sadie">
                <div class="fh5co-feature-icon">
                    <a href="@Url.Content("~/Teacher/KnowledgePage/")"><i class="ti-book"></i></a>
                </div>
                <h3 class="heading">知识点掌握情况</h3>
                <p style="color: #8b969c; padding-top: 20px">点击这里可以查看学生对知识点的掌握情况</p>
            </figure>
        </div>
        <!--使用指南-->
        <div class="col-md-6 col-sm-4 text-center fh5co-feature feature-box">
            <figure class="effect-sadie">
                <div class="fh5co-feature-icon">
                    <a href="@Url.Content("~/Teacher/Guide/")"><i class="ti-help"></i></a>
                </div>
                <h3 class="heading">本站使用指南</h3>
                <p style="color: #8b969c; padding-top: 20px">如果还不会使用，请看简单使用指南</p>
            </figure>
        </div>

    </div>

    <div class="fh5co-spacer fh5co-spacer-md"></div>
</div>
