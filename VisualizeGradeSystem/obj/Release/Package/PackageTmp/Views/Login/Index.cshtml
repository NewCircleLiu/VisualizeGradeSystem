@{
    ViewBag.Title = "登录";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Partial("HomePartialView")

<link href="~/Resources/css/index.css" rel="stylesheet" />
<link href="~/Resources/css/main.css" rel="stylesheet" type="text/css">
<link href="~/Resources/css/themify-icons.css" rel="stylesheet" />


<!--Index-->
<div class="container">
    <div class="fh5co-spacer fh5co-spacer-md"></div>
    <div class="row" id="fh5co-features">
        <div class="col-md-6 col-sm-4 text-center fh5co-feature feature-box">
            <figure class="effect-sadie">
                <div class="fh5co-feature-icon">
                    <a href="#"><i class="ti-user"></i></a>
                </div>
                <h3 class="heading tm-figure-title">个人学习曲线</h3>
                <p style="color: #8b969c; padding-top: 20px">点击这里可以查看你近期的学习变化曲线</p>
            </figure>
        </div>
        <div class="col-md-6 col-sm-4 text-center fh5co-feature feature-box">
            <figure class="effect-sadie">
                <div class="fh5co-feature-icon">
                    <a href="#"><i class="ti-bar-chart"></i></a>
                </div>
                <h3 class="heading">班级学习曲线</h3>
                <p style="color: #8b969c; padding-top: 20px">点击这里可以查看你所在班级近期的学习变化曲线 </p>
            </figure>
        </div>



        <div class="col-md-6 col-sm-4 text-center fh5co-feature feature-box">
            <figure class="effect-sadie">
                <div class="fh5co-feature-icon">
                    <a href="#"><i class="ti-book"></i></a>
                </div>
                <h3 class="heading">知识点掌握情况</h3>
                <p style="color: #8b969c; padding-top: 20px">点击这里可以查看你对知识点的掌握情况</p>
            </figure>
        </div>



        <div class="col-md-6 col-sm-4 text-center fh5co-feature feature-box">
            <figure class="effect-sadie">
                <div class="fh5co-feature-icon">
                    <a href="#"><i class="ti-help"></i></a>
                </div>
                <h3 class="heading">本站使用指南</h3>
                <p style="color: #8b969c; padding-top: 20px">如果还不会使用，请看简单使用指南 </p>
            </figure>
        </div>
    </div>
</div>


<div class="modal fade login" id="loginModal">
    <div class="modal-dialog login animated">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">登录</h4>
            </div>
            <div class="modal-body">
                <div class="box">
                    <div class="content">
                        <div class="form loginBox">
                            <p id="error_info" style="color: red; text-align: center">@ViewBag.error</p>
                            <form method="post" action="~/Login/CheckUser/" accept-charset="UTF-8">
                                <input id="user_id" class="form-control" type="text" placeholder="账号" name="user_id">
                                <input id="user_pass" class="form-control" type="password" placeholder="密码" name="user_pass">
                                <div class="form-group">
                                    <table>
                                        <tr>
                                            <td>
                                                <input class="form-control" placeholder="验证码" name="ValidateCode" id="ValidateCode" type="text" style="width: 200px;">
                                            </td>
                                            <td>
                                                <a onclick="refreshCode()">
                                                    <img id="codeImg" src="@Url.Content("~/VerifyCode")" style="border:solid 1px;width:110px;height:33px;margin-left:10px;"/>
                                                </a>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                                <input class="btn btn-default btn-login" type="button" value="登录" onclick="login()">
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Resources/js/custom/ShowLoginDialog.js"></script>
<script>
    openLoginModal();
</script>