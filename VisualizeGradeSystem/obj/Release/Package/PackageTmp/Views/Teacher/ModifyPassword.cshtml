@{
    ViewBag.Title = "教师端_修改密码";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Partial("HomePartialView_2")

<script src="~/Resources/js/custom/userLogin.js"></script>
<div class="container" style="margin-top: 100px; margin-bottom: 100px; text-align: center">
    <div class="row clearfix">
        <div class="col-md-4 column">
        </div>
        <div class="col-md-4 column">
            <form role="form" method="post" action="~/Teacher/Modify/" accept-charset="UTF-8">
                <div class="form-group">
                    <p id="error_info" style="color: red; text-align: center">@ViewBag.error</p>
                    <label for="exampleInputEmail1">旧密码</label>
                    <input type="email" class="form-control" id="old_pass" name="old_pass" />
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">新密码</label>
                    <input type="password" class="form-control" id="new_pass1" />
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">请再输入一遍新密码</label>
                    <input type="password" class="form-control" id="new_pass2" />
                </div>
                <button type="submit" class="btn btn-default" onclick=" modifypassword();">提交</button>
            </form>
        </div>
        <div class="col-md-4 column">
        </div>
    </div>
</div>
